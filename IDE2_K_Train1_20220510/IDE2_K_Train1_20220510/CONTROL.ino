// ** Moter Contlor ***********************************************************************
// ** 正転 *********************************************************************************
void forward(uint32_t pwm) {
  if (pwm > VALUE_MAX) {
    pwm = VALUE_MAX;
  }
  ledcWrite(CH0, pwm);
  ledcWrite(CH1, 0);
}

// ** 逆転 *********************************************************************************
void reverse(uint32_t pwm) {
  if (pwm > VALUE_MAX) {
    pwm = VALUE_MAX;
  }
  ledcWrite(CH0, 0);
  ledcWrite(CH1, pwm);
}

// ** ブレーキ ******************************************************************************
void brake() {
  ledcWrite(CH0, VALUE_MAX);
  ledcWrite(CH1, VALUE_MAX);
}

// ** 空転 **********************************************************************************
void coast() {
  ledcWrite(CH0, 0);
  ledcWrite(CH1, 0);
}
